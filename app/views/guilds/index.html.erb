<p id="notice"><%= notice %></p>

<h1>Listing Guilds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Realm</th>
      <th>Battlegroup</th>
      <th>Members</th>
      <th>Achievement points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guilds.each do |guild| %>
      <tr>
        <td><%= guild.name %></td>
        <td><%= guild.realm %></td>
        <td><%= guild.battlegroup %></td>
        <td><%= guild.members %></td>
        <td><%= guild.achievementPoints %></td>
        <td><%= link_to 'Show', guild %></td>
        <td><%= link_to 'Edit', edit_guild_path(guild) %></td>
        <td><%= link_to 'Destroy', guild, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

